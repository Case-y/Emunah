.container
	%h1 Welcome!
	.jumbotron
		= form_tag users_path do
			.row		
				= label :user, :email, 'Email'
				%br
				= text_field :user, 'email'
			.row
				= label :user, :password, 'Password'
				%br
				= text_field :user, 'password'
			.row
				= label :user, :full_name, 'Full Name'
				%br
				= text_field :user, 'full_name'
			.row
				= label :user, :status, 'Status'
				%br
				= text_field :user, 'status'
			%br
			.row
				= submit_tag 'Create User'
